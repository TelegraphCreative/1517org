{% import '_macros/global' as global %}

{% block content %}

    {# Header #}
    <section
        class="space-menu space-b">
        {# Placeholder Header Content #}
        {% set content = { title: entry.title, label: entry.label } %}

        {# Page Header #}
        {% include "_components/static/page-header" with { content: content } %}
