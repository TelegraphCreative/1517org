{% import '_macros/styleguide' as guide %}
{% import '_macros/global' as global %}
{% extends "_layouts/_styleguide" %}
{% block content %}


    <h2 class="text-3xl space-b">Page Header -filters</h2>

    <div class="notes leading-normal border-b space-b">
        <h3>Notes:</h3>
        <p>Detail is optional</p>
    </div>
    
    {# Header #}
    {% set content = { 
            title: 'The Section Name', 
            category: 'Section', 
            detail: 'Christ Hold Fast is a project of 1517. We are a Law/Gospel collective of creative contributors, dedicated to proclaiming the gospel of Jesus to all people. Makers of podcasts, authors of books, and friends of the gospel.' 
        }
    %}
    <div id="app">
        {% include "_components/static/page-header--filters" with { content: content } %}
    </div>
{% set code %}{% verbatim %}{% include "_components/page-header--filters" with { content: content } %}{% endverbatim %}{% endset %}
    {{ guide.snippet( code, 'css' ) }}

    

{% set code %}{% verbatim %}
<header class="page-header -left | container--sm gutter-md | space-t space-b--sm">

    <div class="page-header__title | flex-grid">
        <h1 class="header-xl font-serif">{{ content.title }}</h2>

            <div class="filter-bar">
                <div class="item filter | mb-2">
                    <select_box :opt="{ name: 'format', variant: '-md' }">
                        <option value="All Formats" selected>All Formats</option>
                        <option value="Articles">Articles</option>
                        <option value="Events">Events</option>
                    </select_box>
                </div>

                <div class="item filter | mb-2">
                    <select_box :opt="{ name: 'topic', variant: '-md' }">
                        <option value="All Topics" selected>By any Author</option>
                        <option value="Articles">Articles</option>
                        <option value="Events">Events</option>
                    </select_box>
                </div>

            </div>

    </div>

    {% if content.detail is defined %}
    <div class="page-header__detail">

        <div class="paragraphs -sm -loose">
            <p>
                {{ content.detail }}
            </p>
        </div>


    </div>
    {% endif %}
</header>
{% endverbatim %}
{% endset %}
{{ guide.snippet( code, 'twig' ) }}
    
{% endblock %}