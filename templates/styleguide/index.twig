{% extends "_layouts/_styleguide" %}
{% set menu = { 
    layouts: [
        { name: "Singles" },{ 
            name: "Home", 
            url: "/" 
        },
        { name: "Structures" },{
            name: "General Content",
            url: "/our-story"
        },{
            name: "Contact Form", 
            url: "/contact" 
        },{
            name: "Request a Speaker Form", 
            url: "/request-a-speaker" 
        },{
            name: "Channels"
        },{ 
            name: "Category Section Index", 
            url: "/static/category-section-index" 
        },{ 
            name: "Topics Landing", 
            url: "/static/category-topic-landing" 
        },{ 
            name: "Topics List", 
            url: "/topics" 
        },{
            name: "Podcast Landing", 
            url: "/podcasts/virtue-in-the-wasteland" 
        },{
            name: "Podcasts Index (for seo)", 
            url: "/static/podcast-index" 
        },{
            name: "Search Results", 
            url: "/static/search-results" 
        },{
            name: "Event Index", 
            url: "/events" 
        },{
            name: "Shop Index", 
            url: "/static/shop-index" 
        },{
            name: "Detail"
        },{
            name: "Course Detail",
            url: "/courses/of-course"
        },{
            name: "Event Detail",
            url: "/static/event-detail"
        },{
            name: "Product Detail",
            url: "/static/product-detail"
        },{ 
            name: "Podcast Detail", 
            url: "/podcasts/the-thinking-fellows/desert-rocks" 
        },{ 
            name: "Article Detail", 
            url: "/static/article-detail" 
        },{ 
            name: "Video Detail", 
            url: "/videos/jim-story" 
        }
    ]} 
%}
{% block content %}

    <div class="md:w-3/5 mx-auto | space-b--lg" id="template-list">
        <header class="space-b--sm">
            <h2 class="header-xl ">Static Templates</h2>
        </header>

        {# List #}
        <ul class="list-articles -hover-effect">
            {% for item in menu.layouts %}

                {# Item #}
                <li class="list-article">
                    <div
                        class="list-article__content">
                        {# Header #}
                        {% if item.url is defined %}
                            <a class="header-xs font-light" href="{{ item.url }}">{{ item.name }}</a>
                        {% else %}
                            <h3 class="header-xs text-bronze">
                                {{ item.name }}
                            </h3>
                        {% endif %}
                    </div>
                </li>

            {% endfor %}
        </ul>
    </div>

{% endblock %}
