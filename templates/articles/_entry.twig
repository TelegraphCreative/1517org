{% extends "_layouts/_base" %}

{% block content %}
    {# Margin just for testing #}
    <h1 class="mt-24">
        {{ entry.title }}
    </h1>

    <p>
        {{ entry.description }}
    </p>

    <h2>Topics</h2>
    {% if entry.topics|length %}
        <ul>
            {% for category in entry.topics.all() %}
                <li>
                    <a href="{{ category.url }}">
                        {{ category.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if entry.vimeoEmbed and entry.vimeoEmbed.valid %}
        <video_player_full
            img-src="{{ entry.vimeoEmbed.media.image }}"
            video-url="{{ entry.vimeoEmbed.media.url }}"
            aspect-ratio="{{ entry.vimeoEmbed.media.aspectRatio }}"
        />
    {% endif %}

{% endblock %}