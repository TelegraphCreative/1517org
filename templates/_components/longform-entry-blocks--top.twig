{# Notes: 
    Top Blocks only include narrow Longform Content Blocks 
    Don't include anything fullwidth like Billboards, Hero Images, etc  #}
{% if blocks|length %}

    {% for block in blocks.all() %}
        {% switch block.type %}

            {# Article Body #}
            {% case "articleBody" %}
                {% include '_components/longform-blocks/article-body' %}

            {# Syllabus #}
            {% case "bigListSyllabus" %}
                {% include "_components/longform-blocks/big-list-syllabus" %}

            {# Big List - Assets #}
            {% case "bigListAssets" %}
                {% include '_components/longform-blocks/big-list-assets' %}

            {# Button Group #}
            {% case "buttonGroup" %}
                {% include '_components/longform-blocks/button-group' %}
            
            {# Speakers #}
            {% case "speakers" %}
                {% include '_components/longform-blocks/speakers' %}

        {% endswitch %}
    {% endfor %}
    
{% endif %}