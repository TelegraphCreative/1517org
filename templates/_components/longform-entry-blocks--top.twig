{% switch block.type %}

    {# Article Body #}
    {% case "articleBody" %}
        <div class="article-body -drop-cap | paragraphs -md -loose | article-content">

            {{ block.article }}
        </div>

    {# Big List - Assets #}
    {% case "bigListAssets" %}
        <div class="big-list--asset">
            {% if block.header|length %}
                {{ block.header }}
            {% endif %}
            
            {% for item in block.list %}
                {{ item.header }}
                {% set attributes = {
                    class: 'link -underline'
                } %}
                {{ item.resource.link(attributes) }}
            {% endfor %}
        </div>

    {# Button Group #}
    {% case "buttonGroup" %}
        <div class="button-group | pt-4 md:pb-18 pb-12">
            {# Header #}
            {% if block.header|length %}
                <h3 class="header-lg font-serif mb-5 pt-10">{{ block.header }}</h3>
            {% endif %}
            
            {# Actions #}
            <div class="button-group__actions">
                {% for item in block.button.all() %}
                    {{ global.link(item.button, item.buttonStyle)}}                
                {% endfor %}
            </div>
        </div>

{% endswitch %}