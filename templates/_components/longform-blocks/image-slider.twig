{% import '_macros/global' as global %}



{% set slides = block.images %}
{% set sliderContent = [] %}

{% for item in slides %}
{# Optimize On the Fly #}
{% set optimzedImages = craft.imageOptimize.createOptimizedImages(
    item,

        [
            {
                'width': 576,
                'retinaSizes': ['1'],
                'quality': 82,
                'format': 'auto',
            },
            {
                'width': 1276,
                'retinaSizes': ['1'],
                'quality': 82,
                'format': 'auto',
            },
        ]
) %}
{% set sliderContent = sliderContent|merge([{
    imageUrl: optimzedImages.src
}]) %}
{% endfor %}

<image_slider :items="{{ sliderContent | json_encode }}" class="pt-12"></image_slider>
