{% import '_macros/global' as global %}
{% if blocks is defined %}
    
<div class="longform-entry-blocks">

    {% for block in blocks.all() %}
        {% switch block.type %}

        {# Article Body #}
        {% case "articleBody" %}
            <div class="article-body | paragraphs -md -loose | article-content">
                {{ block.article }}
            </div>

        {# Big List - Assets #}
        {% case "bigListAssets" %}
            <div class="big-list--asset">
                <h2>Big List - Assets</h2>
                {{ block.header }}
                {{ global.link(block.resource, 'link -underline')}}
            </div>
        
        {# Button Group #}
        {% case "buttonGroup" %}
            <h2>Button Group</h2>
            <div class="button-group">
                {% for item in block.button.all() %}
                    {{ global.link(item.button, item.buttonStyle)}}                
                {% endfor %}
            </div>
        
        {# Hero Image - full-bleed #}
        {% case "heroImageFullBleed" %}
            <div class="hero-image">
                {{ global.image( block.image[0], '-fit-cover bg-ivory-lightest' )}}
            </div>
            
        {% endswitch %}
    {% endfor %}
    
</div>
{% endif %}