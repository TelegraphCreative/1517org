{% import '_macros/global' as global %}
{% if blocks|length %}

    {% for block in blocks %}
        {% switch block.type %}

        {# Article Body #}
        {% case "articleBody" %}
            {% include '_components/longform-blocks/article-body' %}

        {# Big List - Assets #}
        {% case "bigListAssets" %}
            {% include '_components/longform-blocks/big-list-assets' %}        
       
        {# Button Group #}
        {% case "buttonGroup" %}
            {% include '_components/longform-blocks/button-group' %}
            
        {# Hero Image - full-bleed #}
        {% case "heroImageFullBleed" %}
            {% include '_components/longform-blocks/hero-image' %}

        {# Entry Callout #}
        {% case "entryCallout" %}
            {% include '_components/longform-blocks/entry-callout' %}
            
        {# Billboard - floated image #}
        {% case "billboardFloatedImage" %}
            {% include '_components/longform-blocks/billboard--floated' %}
        
        
        {% endswitch %}
    {% endfor %}
    

{% endif %}