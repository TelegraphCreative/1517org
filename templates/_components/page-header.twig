{# Basic Page Header
    Variation Classes: 
    - `-left`

    Optional Content:
    - Detail
#}
<header class="page-header {% if classes is defined %}| {{ classes }}{% endif %} | container--sm gutter-md | space-t space-b--sm">

    <div class="page-header__title">
        <h1 class="header-xl font-serif">{{ content.title }}</h2>
    </div>

    {% if content.detail is defined and content.detail|length %}
    <div class="page-header__detail">

        <div class="paragraphs -sm -loose">
            {{ content.detail | chop(limit=40, unit='w', append= 'â€¦') }}
        </div>

    </div>
    {% endif %}
</header>