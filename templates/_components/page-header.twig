{% import '_macros/global' as global %}
{# Basic Page Header
    Variation Classes: 
    - `-left`

    Optional Content:
    - Detail
#}
<header class="page-header {% if classes is defined %}| {{ classes }}{% endif %}">
    <div class="| container--sm gutter-md | space-t space-b--sm">

    <div class="page-header__title">
        <h1 class="header-xl font-serif">{{ content.title }}</h2>
    </div>

    {% if content.detail is defined and content.detail|length %}
    <div class="page-header__detail">

        {# <div class="paragraphs -sm -loose">
            {{ content.detail | chop(limit=40, unit='w', append= 'â€¦') }}
        </div> #}

        <div class="paragraphs -sm -loose">
            {% if content.detail is defined and content.detail|length %}
                <p>
                    {{ content.detail }}
                </p>
            {% endif %}
            {% if content.action is defined and content.action|length %}
                {{ global.link( content.action, 'link | meta-label | ml-2' ) }}
            {% endif %}
        </div>

    </div>
    {% endif %}

    {# Pattern #}
    {{ global.patterns( "one", "-light") }}
    </div>
</header>