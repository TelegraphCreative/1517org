{% import '_macros/global' as global %}

{# Options/Content 

    - header
    - description
    - button
    - buttonStyle
    - background
    - image 

    - sage
    - slate
    - bronze-light
    - red
#}


<div class="billboard -text -floated-img | {{ block.backgroundColor }} | no-print">
    <div class="billboard__container container">

        {% if block.image is defined %}
            <div class="billboard__media">
                <div class="billboard__floated">
                        {{ global.image( block.image.one(), '-is1x1 -fit-cover -hover-scale' )}}
                </div>
            </div>
        {% endif %}

        <header class="billboard__content | gutter">

            <div class="billboard__context-max">
                {# Header #}
                {% if block.header is defined %}
                    <div class="billboard__header">
                        <h4 class="billboard-title">{{ block.header }}</h4>
                    </div>
                {% endif %}

                {# Detail #}
                {% if block.description is defined %}
                    <div class="billboard__detail | paragraphs -sm">
                        {{ block.description }}
                    </div>
                {% endif %}

                {# Action #}
                {% if block.button is defined %}
                    <div class="billboard__action">
                        {{ global.link(block.button, block.buttonStyle)}}   
                    </div>
                {% endif %}
            </div>

        </header>

    </div>
</div>