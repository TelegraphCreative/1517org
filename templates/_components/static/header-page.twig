<header class="page-header | gutter-md space-t space-b--sm">
    <h1 class="page-header__title | header-xl ">{{ content.title }}</h2>

    {% if content.detail is defined %}
        <div class="page-header__detail | paragraphs -sm -loose">
            {{ content.detail | raw }}
        </div>
    {% endif %}
</header>