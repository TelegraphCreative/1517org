{% import '_macros/global' as global %}
{# Defaults to stacked #}
{# Check for imported properties #}
{% if classes is defined %}
    {% set classes = classes %}
{% else %}
    {% set classes = '' %}
{% endif %}

<ul class="social-list {{ classes }}">
    {% for link in content.all() %}
    <li>
        <a href="{{ link.href }}" target="_blank" rel="{{ link.channel }}">
            {{ global.socialIcon(link.channel) }}
        </a>
    </li>
    {% endfor %}
</ul>