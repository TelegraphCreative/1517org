{% import '_macros/global' as global %}
{# Defaults to stacked #}
{# Check for imported properties #}
{% if classes is defined %}
    {% set classes = classes %}
{% else %}
    {% set classes = '' %}
{% endif %}


{% if print is defined %}
    {% set print = true %}
{% else %}
    {% set print = false %}
{% endif %}


{% if share is defined %}
    {% set share = true %}
{% else %}
    {% set share = false %}
{% endif %}

<ul class="social-list {{ classes }} | no-print">
    
    {# Print #}
    {% if print %}
        <li>
            <print />
        </li>
    {% endif %}

    {# Share Icons #}
    {% if share %}
        <li>
            <share :target="'https://github.com/TelegraphCreative/'" rel="Share on facebook">
                {{ global.socialIcon('facebook') }}
            </share>
        </li>
        <li>
            <share :target="'https://github.com/TelegraphCreative/'" rel="Share on twitter">
                {{ global.socialIcon('twitter') }}
            </share>
        </li>
        <li>
            <share :subject="'A Subject'" :message="'A message'" rel="Share on twitter">
                {{ global.socialIcon('email') }}
            </share>
        </li>
        {# <li>
            <a href="#" target="_blank" rel="Share on facebook">
                {{ global.socialIcon('facebook') }}
            </a>
        </li>
        <li>
            <a href="#" target="_blank" rel="Share on twitter">
                {{ global.socialIcon('twitter') }}
            </a>
        </li>
        <li>
            <a href="#" target="_blank" rel="Share via email">
                {{ global.socialIcon('email') }}
            </a>
        </li> #}

    {# Social Icons #}
    {% else %}
        {% for link in content.all() %}
        <li>
            <a href="{{ link.href }}" target="_blank" rel="{{ link.channel }}">
                {{ global.socialIcon(link.channel) }}
            </a>
        </li>
        {% endfor %}
    
    {% endif %}

</ul>